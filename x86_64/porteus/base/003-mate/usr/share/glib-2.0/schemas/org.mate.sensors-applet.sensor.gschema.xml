<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="mate-sensors-applet">
  <schema id="org.mate.sensors-applet.sensor">
    <key type="s" name="path">
      <default>''</default>
      <summary>Path to filename</summary>
    </key>
    <key type="s" name="id">
      <default>''</default>
      <summary>Sensor device ids</summary>
    </key>
    <key type="s" name="interface">
      <default>''</default>
      <summary>The sensor device interface</summary>
    </key>
    <key type="s" name="label">
      <default>''</default>
      <summary>User defined label</summary>
    </key>
    <key type="b" name="enabled">
      <default>true</default>
      <summary>Whether a sensor is enabled or not</summary>
    </key>
    <key type="d" name="low-value">
      <default>0</default>
      <summary>Low value</summary>
    </key>
    <key type="d" name="high-value">
      <default>0</default>
