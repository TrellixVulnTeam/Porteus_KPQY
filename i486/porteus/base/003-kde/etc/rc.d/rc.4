#!/bin/bash
#
# rc.4		This file is executed by init(8) when the system is being
#		initialized for run level 4.

# Run X11 startup helper:
pidof watch-xorg >/dev/null && sleep 4 || /opt/porteus-scripts/xorg/watch-xorg 2>/dev/null &

# Make all necessary tweaks to start KDE4 desktop.
login=`egrep -o " login=[^ ]+*" /proc/cmdline | cut -dn -f2`
[ "$login" ] && sed -i -r s/^.*AutoLoginUser=.*$/AutoLoginUser$login/g /usr/share/config/kdm/kdmrc || sed -i -r s/^.*AutoLoginUser=.*$/AutoLoginUser=guest/g /usr/share/config/kdm/kdmrc
rm -f /home/guest/.kde/share/config/phonondevicesrc /root/.kde/share/config/phonondevicesrc
exec /usr/bin/kdm
